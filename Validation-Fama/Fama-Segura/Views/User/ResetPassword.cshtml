@using Fama_Segura.Core.Application.ViewModels.User;
@model ResetPasswordViewModel;

@{
    ViewData["Title"] = "Registro";
}

<body>
    <div class="container mt-3 col-md-6 col-sm-8 col-xl-4 col-lg-5 offset-md-3 offset-xl-4 offset-lg-3">
        <div class="card">
            <div class="card-header text-center">
                <h4>Cambio de Contraseña para @Model.Email</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="User" asp-action="ResetPassword">
                    <div class="form-group mx-sm-4 pt-3 mb-2">
                        <input asp-for="Email" class="form-control bg-white" placeholder="Ingrese el Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mx-sm-4 pb-3 mb-2">
                        <input type="password" asp-for="Password" class="form-control bg-white" placeholder="Ingrese la Contraseña">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mx-sm-4 pb-3 mb-2">
                        <input type="password" asp-for="ConfirmPassword" class="form-control bg-white" placeholder="Confirme la Contraseña">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="text-center mt-4 mb-5">
                        <button type="submit" class="btn btn-primary">Cambiar Contraseña</button>
                        <a asp-controller="User" asp-action="Index" class="btn btn-dark">Volver atrás</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>

<style>
    .card-header {
        background-color: aquamarine;
        color: black;
    }

    .btn-primary {
        background-color: #8ED1FC;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #6EC6FF;
        }

    .btn-dark {
        background-color: #343a40;
        color: white;
    }

    .form-control {
        background-color: white;
    }

</style>




