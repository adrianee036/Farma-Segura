@using Fama_Segura.Core.Application.ViewModels.User
@model ForgotPasswordViewModel;

@{
    ViewData["Title"] = "Olvide contrasenia";
}


<body>
    <div class="container mt-3 col-md-6 col-sm-8 col-xl-4 col-lg-5 offset-md-3 offset-xl-4 offset-lg-3">
        <div class="card">
            <div class="card-header text-center">
                <h4>Olvidé mi contraseña</h4>
            </div>
            <div class="card-body">
                <!-- Mostrar mensaje de error si existe -->
                @if (Model.HasError)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <p>@Model.Error</p>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form method="post" asp-controller="User" asp-action="ForgotPassword">
                    <div class="form-group mx-sm-4 pt-3 mb-5">
                        <input asp-for="Email" class="form-control bg-white" placeholder="Enter your Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <a asp-controller="User" asp-action="Index" class="btn btn-warning">Volver atrás</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>

<style>
    .card-header {
        background-color: aquamarine;
        color: black;
    }

    .btn-primary {
        background-color: #8ED1FC;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #6EC6FF;
        }

    .btn-warning {
        color: white;
        background-color: #ffc107;
    }

    .form-control {
        background-color: white;
    }

    .text-center {
        margin-top: 20px;
        margin-bottom: 20px;
    }

</style>

